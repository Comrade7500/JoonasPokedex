<%- include('header', { otsikko: `Sukupolvi ${numero} Pokemonit` }); %>

<div class="container">
    <h1 class="my-4">Sukupolvi <%= numero %> Pokemonit</h1>
    <div class="row">
        <% pokemonData.forEach(pokemon => { %>
            <% if (pokemon) { %>
                <div class="col-md-3 pokemon-card">
                    <div class="card">
                        <img src="<%= pokemon.sprites.front_default %>" class="card-img-top" alt="<%= pokemon.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= pokemon.name %></h5>
                            <a href="/pokemon/<%= pokemon.name %>" class="btn btn-primary">Näytä tiedot</a>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }) %>
    </div>
</div>
<%- include('footer') %>
